generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String?
  avatarId  String?  @unique @db.ObjectId
  following String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  avatar Image? @relation(fields: [avatarId], references: [id])
}

model Image {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  fileId String
  url    String

  user User?   // ðŸ‘ˆ back-reference ONLY (no relation args)
}